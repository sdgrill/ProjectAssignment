<!DOCTYPE html>
<html>
<%- include ../partials/head %>

<body>
  <% include ../partials/navbar %>

  <div class="container">
    <h1 class="text-center">Update User</h1>

    <form method="post" action="/users/update" class="container mt-5">
       <input type="hidden" name="_id" value="<%= userData._id %>"/>
      
        <div class="row justify-content-center">
          <div class="col-md-4">
            <div class="form-group mb-2">
              <input type="text" class="form-control" name="firstName" placeholder="First Name" value="<%=userData.firstName%>" />
            </div>
            <div class="form-group mb-2">
              <input type="text" class="form-control" name="lastName" placeholder="Last Name" value="<%=userData.lastName%>" />
            </div>
            <div class="form-group mb-2">
              <input type="text" class="form-control" name="email" placeholder="Email" value="<%=userData.email%>" />
            </div>

            <div class="form-group mb-2">
              <label for="role">Role</label>
              <select class="form-control" name="role" id="role">
                  <option value="Admin" <% if(userData.role === 'Admin') { %> selected <% } %>>Admin</option>
                  <option value="QualityControl" <% if(userData.role === 'Quality Control') { %> selected <% } %>>Quality Control</option>
                  <option value="DataEntrySpecialist" <% if(userData.role === 'Data Entry Specialist') { %> selected <% } %>>Data Entry Specialist</option>
              </select>
          </div>
          
            <div class="form-group mb-2">
              <p>Enter a new password to reset the user's password, otherwise leave this field blank.</p>
              <input type="password" class="form-control" name="password" placeholder="Password" />
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="Update User" />
            </div>
          </div>
        </div>
      </form>
  </div>
  <% include ../partials/scripts %>
</body>
</html>